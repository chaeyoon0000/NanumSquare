<script>
function circleUpdate() {
	if (form.title.value == "") {
		alert("input title");
		form.title.focus();
		return false;
	} 
	if (form.content.value == "") {
		alert("input content");
		form.content.focus();
		return false;
	}
	form.submit();
}
function circleList(targetUri) {
	form.action = targetUri;
	form.submit();
}
</script>
