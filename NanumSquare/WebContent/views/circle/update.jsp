	<section class="ftco-section contact-section">
      <div class="container">
        <div class="row d-flex mb-5 contact-info justify-content-center">
        </div>
        <div class="row block-9 justify-content-center mb-5">
          <div class="col-md-8 mb-md-5">
          	<h2 class="text-center">Modify Circle</h2>
          	<form name="form" method="POST" enctype="multipart/form-data" action="<c:url value='/views/circle/update' />" class="bg-light p-5 contact-form">
              <div class="form-group">
              	<label for="name">Circle No</label>
                <input type="text" name="circleNo" id="circleNo" value="${circle.circleNo}" class="form-control" readonly />
              </div>
              <div class="form-group">
              	<label for="name">Title</label>
                <input name="title" id="title" type="text" value="${circle.title}" class="form-control" placeholder="Title">
              </div>
              <div class="form-group">
              	<label for="name">Category</label>
                	<select id="catNo" name = "catNo" class="form-control">
                		<c:if test="${!empty categoryList}">
	                		<c:forEach var="category" items="${categoryList}">
	                			<c:if test="${category.catNo eq circle.category}">
	                				<option value="${category.catNo}" selected="selected">${category.catName}</option>
	                			</c:if>
								<option value="${category.catNo}">${category.catName}</option>
							</c:forEach>
						</c:if>
		            </select>
              </div>
              <div class="form-group">
              	<label for="name">Address</label>
              	<br/>
                	<input id="postcode1" name = "addr1" type="text" value="${loc[0]}" style="width:50px;" readonly/>
					&nbsp;-&nbsp;
					<input id="postcode2" name = "addr2" type="text" value="${loc[1]}" style="width:50px;" readonly/>
					&nbsp;&nbsp;
					<input id="zonecode" name = "addr3" type="text" value="${loc[2]}" style="width:50px;" readonly/>
					&nbsp;
					<input type="button" onClick="openDaumZipAddress();" value = "find address" />
					<br/>
					<input type="text" name = "addr4" id="address" value="${loc[3]}" style="width:240px;" readonly/>
					<input type="text" name = "addr5" id="address_etc" value="" style="width:200px;"/>
              </div>
	    	  <div class="form-group">
	    			<label for="" class="label">Recruit</label>
	    			<input name="max" id="max" type="text" value="${circle.max}" class="form-control" placeholder="Recruit #">
	    	  </div>
              <div class="form-group">
              	<label for="name">End Date</label>
	                <div class="d-flex">
		    		  <div class="form-group mr-2">
		                <input type="text" value="${date}" class="form-control" id="book_pick_date" name = "endDate" placeholder="Date">
		                <input type="time" name = "time" value="${time}" id="inputMDEx1" class="form-control">
		              </div>
              		</div>
              </div>
              <div class="form-group">
              	<label for="name">Content</label>
                <textarea name="content" id="content" cols="30" rows="7" class="form-control" placeholder="Content">${circle.content}</textarea>
              </div>
              <div class="form-group">
              	<label for="name">File Upload</label>
              	</br>
                <input type="file" value="input file" name="image" id="writeForm_pcImgFile" accept=".jpg,.jpeg,.png,.gif" onchange="common.inputFileReturnImg(${circle.image}, 180, 120,&nbsp;'writeForm_pcImg');">
              </div>
              <div class="form-group">
                <input type="button" value="modify" onClick="circleUpdate()" class="btn btn-primary py-3 px-5">
              	<a href="<c:url value='/views/circle/list'></c:url>" class="btn btn-primary py-3 px-5">list</a>
              </div>
            </form>      
